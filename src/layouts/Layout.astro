<style is:global>
  /* 2. Definición de variables y reglas globales */
  :root {
    --font-primary: "Montserrat", sans-serif;
    --color-text: #333333;
    --color-accent: #0056b3; /* Un azul industrial sugerido */
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: var(--font-primary);
    color: var(--color-text);
    background-color: #ffffff;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Estilos base para que todo se vea consistente desde el inicio */
  h1,
  h2,
  h3,
  h4 {
    font-weight: 700;
    text-transform: uppercase;
    margin: 0;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
</style>
