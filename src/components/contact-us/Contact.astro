---
// src/components/contact-us/Contact.astro

// Coordenadas extraídas de tu enlace Waze original para precisión en Google Maps
const googleMapsLink = "https://maps.app.goo.gl/uzsC8SZwbVbnKTLZ9";

// Configuración de contactos (Misma que CtaSection)
const contactCotizacion = {
  number: "51999316080",
  message: encodeURIComponent(
    "Hola! Deseo solicitar una cotización para mi marca.",
  ),
};

const contactAsistencia = {
  number: "51995476547", // Debe coincidir con el de CtaSection
  message: encodeURIComponent(
    "Hola! Necesito soporte o asistencia técnica sobre los productos.",
  ),
};

const linkCotizacion = `https://wa.me/${contactCotizacion.number}?text=${contactCotizacion.message}`;
const linkAsistencia = `https://wa.me/${contactAsistencia.number}?text=${contactAsistencia.message}`;
---

<section
  class="contact-section relative overflow-hidden bg-slate-50 py-20"
  id="contacto"
>
  <div
    class="pointer-events-none absolute -left-20 top-20 h-96 w-96 rounded-full bg-[#005daa] opacity-5 blur-3xl mix-blend-multiply"
  >
  </div>
  <div
    class="pointer-events-none absolute -right-20 bottom-20 h-96 w-96 rounded-full bg-[#95c11e] opacity-5 blur-3xl mix-blend-multiply"
  >
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="mb-16 text-center">
      <span
        class="mb-4 inline-block rounded-full bg-[#005daa]/10 px-4 py-1.5 text-xs font-bold uppercase tracking-widest text-[#005daa]"
      >
        Estamos para ayudarte
      </span>
      <h2 class="text-4xl font-black text-slate-900 md:text-5xl">
        Contáctanos
      </h2>
      <p class="mt-4 text-lg text-slate-600">
        ¿Tienes alguna consulta o deseas solicitar una cotización? Escríbenos y
        te responderemos a la brevedad.
      </p>
    </div>

    <div class="grid gap-12 lg:grid-cols-2 lg:gap-16">
      <div class="flex flex-col gap-10">
        <div class="rounded-2xl bg-white p-8 shadow-lg shadow-slate-200/50">
          <h3 class="mb-6 text-2xl font-bold text-slate-900">
            Información de Contacto
          </h3>

          <div class="space-y-6">
            <a
              href={googleMapsLink}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-start gap-4 p-3 -mx-3 rounded-xl transition-all hover:bg-slate-50"
            >
              <div
                class="flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-[#005daa]/10 text-[#005daa] transition-transform group-hover:scale-110 group-hover:bg-[#005daa] group-hover:text-white"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h4
                  class="font-bold text-slate-900 group-hover:text-[#005daa] transition-colors"
                >
                  Planta Principal
                </h4>
                <p
                  class="text-slate-600 leading-relaxed text-sm group-hover:text-slate-800"
                >
                  Asociación El Olivar del Valle / Anexo 22, Calle Sr. de los
                  Milagros, San Antonio de Chaclla
                </p>
              </div>
            </a>

            <a
              href={linkCotizacion}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-start gap-4 p-3 -mx-3 rounded-xl transition-all hover:bg-slate-50"
            >
              <div
                class="flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-[#95c11e]/10 text-[#95c11e] transition-transform group-hover:scale-110 group-hover:bg-[#95c11e] group-hover:text-white"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <div>
                <h4
                  class="font-bold text-slate-900 group-hover:text-[#95c11e] transition-colors"
                >
                  Ventas
                </h4>
                <span
                  class="block text-slate-600 group-hover:text-slate-900 transition-colors"
                >
                  +{contactCotizacion.number}
                </span>
              </div>
            </a>

            <a
              href={linkAsistencia}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-start gap-4 p-3 -mx-3 rounded-xl transition-all hover:bg-orange-50/50"
            >
              <div
                class="flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-orange-100 text-orange-500 transition-transform group-hover:scale-110 group-hover:bg-orange-500 group-hover:text-white"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                  ></path>
                </svg>
              </div>
              <div>
                <h4
                  class="font-bold text-slate-900 group-hover:text-orange-600 transition-colors"
                >
                  Asistencia Técnica
                </h4>
                <span
                  class="block text-slate-600 group-hover:text-slate-900 transition-colors"
                >
                  +{contactAsistencia.number}
                </span>
              </div>
            </a>

            <a
              href="mailto:ventas@grupolindaplast.com"
              class="group flex items-start gap-4 p-3 -mx-3 rounded-xl transition-all hover:bg-slate-100"
            >
              <div
                class="flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-slate-100 text-slate-600 transition-transform group-hover:scale-110 group-hover:bg-slate-600 group-hover:text-white"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <h4
                  class="font-bold text-slate-900 group-hover:text-slate-700 transition-colors"
                >
                  Correo Electrónico
                </h4>
                <span
                  class="block break-all text-slate-600 group-hover:text-slate-900 transition-colors"
                >
                  ventas@grupolindaplast.com
                </span>
              </div>
            </a>
          </div>
        </div>

        <div
          class="h-64 w-full overflow-hidden rounded-2xl shadow-md border border-slate-200 relative group"
        >
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3902.9234839885823!2d-76.96530442410313!3d-11.914644440628397!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105dbbc7018f2ab%3A0xf180830dc2890397!2sTuboFlex%20Peru!5e0!3m2!1ses-419!2spe!4v1710520000000!5m2!1ses-419!2spe"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            class="grayscale group-hover:grayscale-0 transition-all duration-500"
          ></iframe>
        </div>

        <div class="flex gap-4">
          <a
            href="https://www.waze.com/ul?q=TuboFlex%20Peru&ll=-11.9146498,-76.9627295&navigate=yeshttps://www.waze.com/es-419/live-map/directions/pe/gobierno-regional-de-lima/san-antonio-de-chaclla/tuboflex-peru?navigate=yes&to=place.ChIJq_IYcLzbBZERlwOJwg2DgPE"
            target="_blank"
            rel="noopener noreferrer"
            class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-[#33ccff] px-4 py-3 text-sm font-bold text-white transition-all hover:bg-[#00aadd] hover:shadow-lg hover:-translate-y-1"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M12.46 2.06c.36 0 .69.21.84.53l6.54 13.92c.2.42.06.93-.32 1.18l-5.75 3.84c-.26.17-.59.17-.85 0l-5.75-3.84c-.38-.25-.52-.76-.32-1.18L11.62 2.6c.15-.32.48-.54.84-.54z"
              ></path>
            </svg>
            Ir con Waze
          </a>

          <a
            href={googleMapsLink}
            target="_blank"
            rel="noopener noreferrer"
            class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-[#4285F4] px-4 py-3 text-sm font-bold text-white transition-all hover:bg-[#3367d6] hover:shadow-lg hover:-translate-y-1"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
              ></path>
            </svg>
            Google Maps
          </a>
        </div>
      </div>

      <div
        class="lg:sticky lg:top-24 h-fit rounded-3xl bg-white p-8 shadow-2xl lg:p-10 border border-slate-100"
      >
        <h3 class="mb-2 text-2xl font-black text-slate-900">
          Envíanos un mensaje
        </h3>
        <p class="mb-8 text-sm text-slate-500">
          Completa el formulario y nos pondremos en contacto contigo lo antes
          posible.
        </p>

        <form
          action="https://api.web3forms.com/submit"
          method="POST"
          class="space-y-5"
        >
          <!-- Web3Forms Access Key -->
          <input
            type="hidden"
            name="access_key"
            value="50932599-18d2-4416-919d-19d57e79a451"
          />

          <!-- Campos opcionales para mejorar la experiencia -->
          <input
            type="hidden"
            name="subject"
            value="Nuevo mensaje de contacto - Tuboflex Perú"
          />
          <input
            type="hidden"
            name="from_name"
            value="Formulario Web Tuboflex"
          />
          <input
            type="checkbox"
            name="botcheck"
            class="hidden"
            style="display: none;"
          />

          <div class="space-y-2">
            <label for="name" class="text-sm font-bold text-slate-700"
              >Nombre Completo</label
            >
            <input
              type="text"
              id="name"
              name="name"
              class="w-full rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-slate-900 outline-none transition-all focus:border-[#005daa] focus:bg-white focus:ring-4 focus:ring-[#005daa]/10"
              placeholder="Ej. Juan Pérez"
              required
            />
          </div>

          <div class="grid gap-5 md:grid-cols-2">
            <div class="space-y-2">
              <label for="phone" class="text-sm font-bold text-slate-700"
                >Teléfono</label
              >
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-slate-900 outline-none transition-all focus:border-[#005daa] focus:bg-white focus:ring-4 focus:ring-[#005daa]/10"
                placeholder="Ej. 999 888 777"
                required
              />
            </div>
            <div class="space-y-2">
              <label for="email" class="text-sm font-bold text-slate-700"
                >Correo</label
              >
              <input
                type="email"
                id="email"
                name="email"
                class="w-full rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-slate-900 outline-none transition-all focus:border-[#005daa] focus:bg-white focus:ring-4 focus:ring-[#005daa]/10"
                placeholder="ejemplo@empresa.com"
                required
              />
            </div>
          </div>

          <div class="space-y-2">
            <label for="message" class="text-sm font-bold text-slate-700"
              >Mensaje / Consulta</label
            >
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-slate-900 outline-none transition-all focus:border-[#005daa] focus:bg-white focus:ring-4 focus:ring-[#005daa]/10"
              placeholder="Hola, me gustaría recibir más información sobre..."
              required></textarea>
          </div>

          <button
            type="submit"
            class="w-full rounded-lg bg-[#005daa] px-8 py-4 text-center font-bold text-white transition-all hover:bg-[#004a87] hover:shadow-lg hover:shadow-blue-500/30 hover:-translate-y-1 active:scale-[0.98]"
          >
            ENVIAR MENSAJE
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
