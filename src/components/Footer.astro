<style>
  :root {
    --tubo-blue: #005daa;
    --linda-green: #95c11e;
    --dark-bg: #111111;
    --footer-bottom-bg: #0a0a0a;
    --text-muted: #888888;
  }

  .footer {
    background-color: var(--dark-bg);
    color: #fff;
    font-family: "Inter", sans-serif;
    position: relative;
  }

  .brand-line {
    height: 4px;
    background: linear-gradient(
      90deg,
      var(--tubo-blue) 0%,
      var(--linda-green) 100%
    );
    width: 100%;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 3rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
  }

  .footer-logo {
    height: 55px;
    margin-bottom: 1.5rem;
    filter: brightness(0) invert(1);
  }

  .brand-desc {
    color: #ccc;
    line-height: 1.6;
    font-size: 0.9rem;
  }

  h4,
  .title-link {
    color: #fff !important;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    letter-spacing: 0.5px;
    display: block;
  }

  .link-list {
    list-style: none;
    padding: 0;
  }
  .link-list li {
    margin-bottom: 0.8rem;
  }
  .link-list a {
    color: #eee;
    text-decoration: none;
    font-size: 0.95rem;
    transition: all 0.2s ease;
  }
  .link-list a:hover {
    color: var(--linda-green);
    transform: translateX(5px);
    display: inline-block;
  }

  .contact-item {
    display: flex;
    gap: 12px;
    margin-bottom: 1.2rem;
    text-decoration: none;
    transition: transform 0.2s;
  }
  .contact-item:hover {
    transform: translateX(3px);
  }

  .icon-box {
    background: rgba(255, 255, 255, 0.05);
    width: 36px;
    height: 36px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
  }

  .label {
    display: block;
    font-size: 0.7rem;
    text-transform: uppercase;
    color: #ffffff;
    margin-bottom: 2px;
    opacity: 0.6;
  }

  .contact-item p {
    margin: 0;
    color: #fff;
    font-size: 0.85rem;
  }

  .footer-bottom {
    background-color: var(--footer-bottom-bg);
    padding: 2rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .footer-bottom-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    align-items: center;
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer-bottom-grid {
      grid-template-columns: 1fr auto 1fr;
      text-align: left;
    }
  }

  .copyright p {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin: 0;
  }

  .dev-signature {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }
  .dev-text {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--text-muted);
  }
  .dev-link {
    color: #fff;
    text-decoration: none;
    font-weight: 700;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
    padding: 4px 12px;
    border-radius: 20px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  .code-icon {
    color: var(--linda-green);
    font-family: monospace;
    font-weight: 900;
  }
  .dev-link:hover {
    background: rgba(149, 193, 30, 0.1);
    border-color: var(--linda-green);
    color: var(--linda-green);
    transform: translateY(-2px);
  }

  .social-links {
    display: flex;
    gap: 0.8rem;
    justify-content: center;
  }
  @media (min-width: 768px) {
    .social-links {
      justify-content: flex-end;
    }
  }
  .social-btn {
    width: 38px;
    height: 38px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.03);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }
  .social-icon {
    width: 20px;
    height: 20px;
  }
  .social-btn:hover {
    transform: translateY(-3px);
    color: #fff;
  }
